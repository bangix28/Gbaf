{% extends 'layout.twig' %}
{% block head %}
<title>pages des acteur du gbaf !</title>
{% endblock %}
{% block content %}
    {% for actor in actor %}
        <section class="container-fluid h-100  text-dark">
            <div class="row justify-content-center align-items-center">
                 <img src="images/upload_images/{{ actor.logo }}">
            </div>
            <div class="offset-2 col-10 p-3">
                <h2 class="lead"><a href="{{ actor.link }}">{{ actor.link }}</a></h2>
            </div>
            <div class="offset-2 col-10">
                <p class="lead p-5"> {{ actor.description }}</p>
            </div>

        </section>
        <section class="col align-self-center container-fluid h-100  text-dark">
            <div class="border border-dark row justify-content-center align-items-center">
                <div class="offset-1 col-8 row">
                    <h2 class="col-lg-4">{{ nbrComment }} de Commentaires</h2>
                   <div class="offset-2 col-3">
                       <button type="submit" class="btn btn-success"href="index.php?access=addComment&amp;id={{ actor.actor_id }}">Nouveau<br> commentaires</button>
                   </div>

                    <p>{{ actor.actor_like }} <a href="#"><img src="images/like.png" style="max-width: 25px;"></a> <a href="#"><img src="images/dislike.png" style="max-width: 35px"></a>{{ actor.actor_like }}</p>
                </div>
    {% endfor %}
    {% for data in comment %}
                <div class="offset-3 col-9 p-4">
                        <p class="col-12">Pr√©nom: {{ data.author }}</p>
                        <p class="lead col-12">Date: {{ data.comment_date_fr }} </p>
                        <p class="lead col-12">Commentaire: {{ data.comment }}</p>

                </div>
    {% endfor %}
            </div>
        </section>
{% endblock %}
